<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.burgerandgrill">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeDelivery"></activity>
        <activity android:name=".TakeOrder"
            android:parentActivityName=".Menu"/>
        <activity
            android:name=".AddMenuItem"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".Menu"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Settings" />
        <activity android:name=".Sales" />
        <activity
            android:name=".Inventory"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".AddUser"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".UserDashboard" />
        <activity android:name=".AdminDashboard" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>