<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    tools:context=".AddUser">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/cooperblackbt"
            android:text="ADD NEW USER"
            android:textColor="@android:color/white"
            android:textSize="24dp"></TextView>
        <Button
            android:id="@+id/view_all_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:text="view all"
            android:textColor="@android:color/holo_red_dark"
            android:backgroundTint="#FFDF00"
            android:background="@drawable/round_corners"
            android:fontFamily="@font/cooperblackbt"
            android:foreground="?attr/selectableItemBackgroundBorderless">
        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/cooperblackbt"
        android:text="Enter Username:"
        android:textColor="#FFDF00"
        android:background="@drawable/round_corners"
        android:backgroundTint="@android:color/transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/_20sdp"></TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:hint="username..."
        android:textColor="@android:color/black"
        android:background="@drawable/round_corners"
        android:backgroundTint="@android:color/white"
        android:padding="10dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/cooperblackbt"
        android:text="Enter Password:"
        android:textColor="#FFDF00"
        android:background="@drawable/round_corners"
        android:backgroundTint="@android:color/transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/_20sdp"></TextView>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:hint="password (at least 6 characters)"
        android:textColor="@android:color/black"
        android:background="@drawable/round_corners"
        android:backgroundTint="@android:color/white"
        android:padding="10dp"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/cooperblackbt"
        android:text="Select Type:"
        android:textColor="#FFDF00"
        android:background="@drawable/round_corners"
        android:backgroundTint="@android:color/transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/_20sdp"></TextView>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupradio"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/notosansbold"
        android:textColor="@color/colorAccent"
        android:padding="5dp">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_admin"
            android:textColor="@color/colorAccent"
            android:text="Admin"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_employee"
            android:textColor="@color/colorAccent"
            android:text="Employee"
            android:textSize="20dp"/>
    </RadioGroup>
    <Button
        android:id="@+id/save_user"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:fontFamily="@font/cooperblackbt"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="SAVE"
        android:enabled="false"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/colorAccent"
        android:textSize="20dp"
        android:padding="@dimen/_10sdp"></Button>

    <ProgressBar
        android:id="@+id/add_user_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>