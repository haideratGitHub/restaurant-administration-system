<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".HomeDelivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MENU"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:fontFamily="@font/cooperblackbt"
            android:layout_margin="20dp"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_for_order_delivery"
            android:padding="10dp"
            android:background="#333333"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CURRENT ORDER"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:fontFamily="@font/cooperblackbt"
            android:layout_margin="20dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/current_order_list_delivery"
            android:padding="10dp"
            android:background="#333333"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/cooperblackbt"
                android:text="Customer Name: "
                android:textColor="#FFDF00"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName"
                android:fontFamily="@font/notosansbold"
                android:hint="Name"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:textSize="20dp"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/cooperblackbt"
                android:text="Contact: "
                android:textColor="#FFDF00"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/customer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="phone"
                android:fontFamily="@font/notosansbold"
                android:hint="Phone Number"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:textSize="20dp"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/cooperblackbt"
                android:text="Delivery Address:"
                android:textColor="#FFDF00"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/customer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:fontFamily="@font/notosansbold"
                android:hint="Address"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:textSize="20dp"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/cooperblackbt"
                android:text="Delivery Boy:"
                android:textColor="#FFDF00"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/delivery_boy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="text"
                android:fontFamily="@font/notosansbold"
                android:hint="Name"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:textSize="20dp"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/cooperblackbt"
                android:text="Phone Number:"
                android:textColor="#FFDF00"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/delivery_boy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="phone"
                android:fontFamily="@font/notosansbold"
                android:hint="Number"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:background="@drawable/round_corners"
                android:backgroundTint="@android:color/transparent"
                android:textSize="20dp"
                >
            </EditText>
        </LinearLayout>
        <Button
            android:id="@+id/order_discount_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/notosansbold"
            android:text="Discount ? "
            android:textColor="@android:color/black"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/colorAccent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp"></Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/notosansbold"
                android:text="Total Bill: "
                android:textColor="@android:color/black"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/colorAccent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/order_total_bill_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosansbold"
                android:text="0 Rs."
                android:textColor="@android:color/black"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/colorAccent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/place_order_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/cooperblackbt"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="PLACE ORDER"
            android:textColor="@android:color/black"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/colorAccent"
            android:padding="8dp"
            android:textSize="20dp"></Button>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>