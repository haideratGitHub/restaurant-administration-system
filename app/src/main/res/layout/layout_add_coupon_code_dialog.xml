<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/heading1_add_coupon_code_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Coupon Code:"
        android:textColor="#333333"
        android:textSize="24dp"
        android:fontFamily="@font/notosansbold"
        android:layout_margin="20dp"></TextView>

    <EditText
        android:id="@+id/new_coupon_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading1_add_coupon_code_dialog"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/notosansbold"
        android:hint="Coupon Code"
        android:inputType="textPersonName"
        android:layout_margin="20dp"></EditText>

    <TextView
        android:id="@+id/heading2_add_coupon_code_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_coupon_code"
        android:layout_alignParentStart="true"
        android:text="Discount:"
        android:textColor="#333333"
        android:textSize="24dp"
        android:fontFamily="@font/notosansbold"
        android:layout_margin="20dp"></TextView>

    <NumberPicker
        android:id="@+id/discount_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_coupon_code"
        android:layout_alignLeft="@id/heading2_add_coupon_code_dialog"
        android:layout_alignRight="@id/heading2_add_coupon_code_dialog"
        android:layout_centerInParent="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="-175dp" />

</RelativeLayout>